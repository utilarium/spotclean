{
  "name": "@theunwalked/spotclean",
  "version": "0.0.1",
  "description": "spotclean sanitizes error messages to prevent secret leakage and information disclosure.",
  "type": "module",
  "main": "./dist/spotclean.cjs",
  "module": "./dist/spotclean.js",
  "types": "./dist/spotclean.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utilarium/spotclean.git"
  },
  "exports": {
    ".": {
      "types": "./dist/spotclean.d.ts",
      "import": "./dist/spotclean.js",
      "require": "./dist/spotclean.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "start": "dist/main.js",
    "dev": "vite build --watch",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "precommit": "npm run lint && npm run test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "security",
    "error",
    "sanitization",
    "secrets",
    "redaction",
    "logging"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "homepage": "https://utilarium.github.io/spotclean/",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@swc/core": "^1.12.11",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "wrap-ansi": "7.0.0"
  }
}
